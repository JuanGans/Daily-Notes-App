generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_COMMENT")
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  noteId    Int
  userId    Int
  userName  String   // âœ… Tambahkan field denormalisasi
  createdAt DateTime @default(now())
}